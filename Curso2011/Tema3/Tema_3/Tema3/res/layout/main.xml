<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
	<LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    >
		<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="SaveAndRestore"
    		android:onClick="lanzarRestoreSample"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="LinearLayout"
    		android:onClick="lanzarLinearLayout"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="RelativeLayout"
    		android:onClick="lanzarRelativeLayout"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="TableLayout"
    		android:onClick="lanzarTableLayout"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="ScrollBar"
    		android:onClick="lanzarScrollBar"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Button"
    		android:onClick="lanzarButton"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="ImageButton"
    		android:onClick="lanzarImageButton"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="ImageView"
    		android:onClick="lanzarImageView"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="DateWidget"
    		android:onClick="lanzarDateWidget"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="AutoComplete"
    		android:onClick="lanzarAutocomplete"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Spinner"
    		android:onClick="lanzarSpinner"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Chronometer"
    		android:onClick="lanzarChronometer"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Controles"
    		android:onClick="lanzarControles"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Gallery"
    		android:onClick="lanzarGallery"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="ImageSwitcher"
    		android:onClick="lanzarImageSwitcher"
    	/>
    	<Button  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Animation"
    		android:onClick="lanzarAnimation"
    	/>
    	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="100dip"
	/>
	</LinearLayout>
</ScrollView>
