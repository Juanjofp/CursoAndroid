    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.NETWORK"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name">
        <activity android:label="@string/app_name" android:name="com.juanjofp.cursoandroid.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.juanjofp.cursoandroid.HelloActivity">
        </activity>

        <receiver android:exported="true" android:name="com.juanjofp.cursoandroid.GetNameInBackground$CallbackReceiver">
            <intent-filter>
                <action android:name="com.juanjofp.cursoandroid.Callback">
                </action>
            </intent-filter>
        </receiver>

    </application>

</manifest>
