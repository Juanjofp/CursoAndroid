<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.franco.juanjo.pac1.tema2.fragments.BookDetailFragment">

    <ImageView
        android:id="@+id/ivCoverBookDetailFragment"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:src="@mipmap/cover"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvAuthorBookDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCoverBookDetailFragment"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:text="Resumen dle libro" />

    <TextView
        android:id="@+id/tvDetailsBookDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvAuthorBookDetailFragment"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:text="Resumen dle libro" />

</RelativeLayout>
